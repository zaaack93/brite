

{%- for product in collections.all.products -%}
  {%- liquid
    capture odd_even
      cycle 'odd', 'even'
    endcapture

    assign shape_id = item.id
    if image_shape == 'blob'
      assign shape_id = item.id | append: '-' | append: forloop.index0
    endif
  -%}
  {%- render 'product-tile-bundle'
    product: product,
    shape: image_shape,
    shape_id: shape_id,
    odd_even: odd_even,
    index: forloop.index0,
    products_per_row_mobile: section.settings.products_per_row_mobile,
    enable_quick_buy: true
  -%}

{%- endfor -%}


{%- unless request.design_mode -%}
  <script src="{{ 'vendor-product.bundle.min.js' | asset_url }}" type="module"></script>
  <script src="{{ 'product-quick-buy-bundle.js' | asset_url }}" type="module"></script>
{%- endunless -%}