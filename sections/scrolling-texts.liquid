<div class="rdc-scrolling-text" style="background-color: {{ section.settings.section_bg }}">
  <div class="rdc-scrolling-text-inner rdc-d-flex rdc-ai-c">
    {% for block in section.blocks %}
      <div class="rdc-scrolling-text-t rdc-d-flex rdc-ai-c">
        <div class="rdc-d-flex rdc-scrolling-text-img">
      <img class="{% if block.settings.invert %}rdc-invert{% endif %}" src="{{ block.settings.icon | img_url: '100x' }}">
           </div>
         <div class="rdc-d-flex rdc-scrolling-text-p">
      <p class="{% if block.settings.invert %}rdc-invert{% endif %} rdc-m-20">{{ block.settings.text }}</p>
           </div>
      </div>
      {% endfor %}
  </div>
    <div class="rdc-scrolling-text-inner rdc-scrolling-text-inner-2 rdc-d-flex rdc-ai-c">
    {% for block in section.blocks %}
      <div class="rdc-scrolling-text-t rdc-d-flex rdc-ai-c">
        <div class="rdc-d-flex rdc-scrolling-text-img">
      <img class="{% if block.settings.invert %}rdc-invert{% endif %}" src="{{ block.settings.icon | img_url: '100x' }}">
           </div>
         <div class="rdc-d-flex rdc-scrolling-text-p">
      <p class="{% if block.settings.invert %}rdc-invert{% endif %} rdc-m-20">{{ block.settings.text }}</p>
           </div>
      </div>
      {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Scrolling Texts",
    "settings": [
      {
        "type": "color",
        "id": "section_bg",
        "label": "Background color"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "checkbox",
            "id": "invert",
            "label": "Invert"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Scrolling Texts"
      }
    ]
  }
{% endschema %}

